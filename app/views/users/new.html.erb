<h1>Sign up</h1>
<%= render 'shared/error_messages', object: @user %>
<%= form_for @user, url: signup_path do |f| %>
  <table>
    <tr>
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td><%= f.label :email %></td>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <td colspan="2">
        <%= f.submit "Sign up" %>
      <td>
    </tr>
  </table>
<% end %>